<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.sale.stock</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale_stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='website_warehouse_setting']" position="after">
                <div class="row mt16" id="website_location_setting" groups="stock.group_stock_multi_locations">
                    <label for="website_location_id" string="Location" class="col-lg-3 o_light_label" />
                    <field name="website_location_id" />
                </div>

            </xpath>

        </field>
    </record>

</odoo>
