<?xml version="1.0" ?>
<odoo>
    <record id="view_business_open_issue_tree" model="ir.ui.view">
        <field name="name">Business Open Issue</field>
        <field name="model">business.open.issue</field>
        <field name="arch" type="xml">
            <tree string="Open Issue" sample="1">
                <field name="code" />
                <field name="name" />
                <field name="date" />
                <field name="project_id" />
                <field name="process_id" />
                <field name="area_id" />
                <field name="responsible_id" />
                <field name='state' widget="badge" decoration-success="state == 'running'  " />
            </tree>
        </field>
    </record>
    <record id="view_business_open_issue_form" model="ir.ui.view">
        <field name="name">Business Open Issue</field>
        <field name="model">business.open.issue</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field
                        name="state"
                        widget="statusbar"
                        options="{'clickable': '1'}"
                        statusbar_visible="draft,open,closed"
                    />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name" class="oe_inline" />
                        </h1>
                    </div>

                    <group>
                        <group string="Identification">
                            <field name="code" />
                            <field name="project_id" />
                            <field name="process_id" />
                            <field name="area_id" />
                        </group>
                        <group string="Date">
                            <field name="date" />
                            <field name="deadline" />
                            <field name="closed_date" />
                        </group>
                        <group string="Responsible">
                            <field name="responsible_id" />
                            <field name="customer_id" />
                        </group>

                    </group>
                    <field name="description" />
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>


    <record id="action_business_open_issue" model="ir.actions.act_window">
        <field name="name">Open Issue</field>
        <field name="res_model">business.open.issue</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        name="Open Issue"
        id="menu_business_open_issue"
        action="action_business_open_issue"
        parent="menu_business_process_main"
        sequence="90"
    />


</odoo>
